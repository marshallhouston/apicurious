<div class="container">
  <%= render 'layouts/user_info' %>
  <div class="main-container">

    <%= render 'layouts/info_bar' %>


    <div class="repositories repositories-container">
      <div class="repositories-list">
        <% @repositories.each do |repository| %>
        <div class="repository-details">
          <h2 class="repo-name"> <%=link_to "#{repository.name}", repository.repo_url %></h2>
          <p class="repo-language"> <%= repository.language %></p>
          <p class="last-updated"> <%= repository.last_updated  %></p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
